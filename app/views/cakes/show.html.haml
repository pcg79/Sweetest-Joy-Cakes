= javascript_include_tag "third_party/jquery.lightbox-0.5.min"
= javascript_include_tag "pictures"
= stylesheet_link_tag "jquery.lightbox-0.5"

#gallery
  %span#breadcrumb
    = link_to "Back To #{@cake.category.name.titleize}", category_path(@cake.category)

  %h1= @title

  %table#pictures
    - @pictures.each do |pics|
      %tr
        = render :partial => 'cake_pictures/picture', :collection => pics, :as => :picture