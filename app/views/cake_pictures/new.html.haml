- form_for :picture, @picture, :url => pictures_path, :html => { :multipart => true } do |f|
  = hidden_field_tag :joys_sk, @joys_sk
  %p
    = f.file_field :photo, :label => "File name:<br/>"
  %p
    = f.text_area :description, :label => "File description:<br/>"
  %p
    = f.submit "Submit", :class => "button"